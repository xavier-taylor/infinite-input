{
  "name": "api",
  "version": "1.0.0",
  "scripts": {
    "local": "ts-node-dev -r dotenv/config src/server.ts",
    "cedict": "ts-node -r dotenv/config src/scripts/cedict.ts",
    "document": "ts-node -r dotenv/config src/scripts/document.ts",
    "build": "tsc",
    "start": "node -r dotenv/config build/server.js",
    "lint": "eslint --ext ts src/**",
    "gen-sql-types": "npx @rmp135/sql-ts -c sql-to-ts.json && prettier --write '*/**/sql-model.ts'",
    "test": "jest -c jest.config.js",
    "int": "psql xavier -d test -f ../db/schema/mandarin.sql && jest --setupFiles dotenv/config  -c jest.config.integration.js",
    "lint-fix": "eslint --ext ts --fix src",
    "CAREFUL-rebuild-psql": "psql_ACCIDENT_GUARD xavier -d infinite_input -f ../db/schema/mandarin.sql ",
    "refresh": "npm_ACCIDENT_GUARD run rebuild-psql && npm run gen-sql-types && npm run cedict",
    "gen-gql-types": "graphql-codegen --config codegen.yml",
    "gql": "npm run gen-gql-types"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-apollo-client-helpers": "^1.1.10",
    "@graphql-codegen/typescript-operations": "^1.17.15",
    "@graphql-codegen/typescript-react-apollo": "2.2.3",
    "@graphql-codegen/typescript-resolvers": "1.19.0",
    "@graphql-typed-document-node/core": "^3.1.0",
    "@rmp135/sql-ts": "^1.8.2",
    "@tsconfig/node14": "^1.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.32",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@graphql-codegen/typed-document-node": "^1.18.4",
    "@types/luxon": "^2.0.4",
    "@types/pg": "^7.14.11",
    "apollo-server": "^2.23.0",
    "axios": "^0.21.4",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "luxon": "^2.0.2",
    "microsoft-cognitiveservices-speech-sdk": "^1.18.1",
    "pg": "^8.5.1"
  }
}
